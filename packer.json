{
  "variables": {
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_ami_name": "amazon-linux_{{isotime \"02Jan2006\"}}_{{uuid}}"
  },

  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `aws_ami_name`}}",
    "ami_description": "Customized Amazon Linux",
    "associate_public_ip_address": "true",
	  "vpc_id": "vpc-31dc1057",
	  "subnet_id": "subnet-36cc3c7e",
	  "ssh_interface": "private_ip",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn-ami*-ebs",
        "root-device-type": "ebs"
      },
      "owners": ["137112412989", "591542846629", "801119661308", "102837901569", "013907871322", "206029621532", "286198878708", "443319210888"],
      "most_recent": true
    }
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "packages='epel-release python-pip ansible'",
        "sudo yum install -y $packages",
        " echo 'Test connection'", 
        " curl -m 20 172.23.192.237"
      ]
    }
  ]
}
