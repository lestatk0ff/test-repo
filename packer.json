{
  "variables": {
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_ami_name": "amazon-linux_{{isotime \"02Jan2006\"}}_{{uuid}}"
  },

  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "{{user `aws_ami_name`}}",
    "ami_description": "Customized Amazon Linux",
    "associate_public_ip_address": "true",
	  "vpc_id": "vpc-31dc1057",
	  "subnet_id": "subnet-36cc3c7e",
	  "ssh_interface": "private_ip",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "CentOS Linux 7 x86_64 HVM EBS ENA*",
        "root-device-type": "ebs"
      },
      "owners": ["679593333241"],
      "most_recent": true
    }
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum install -y epel-release",
        "sudo yum update -y",
        "sudo yum install -y python36-setuptools git",
	"sudo easy_install-3.6 pip",
        "sudo pip install ansible",
        "curl -m 20 172.23.192.237"
      ]
    },
    {
      "type": "ansible-local",
      "galaxy_file": "requirements.yml",
      "playbook_file": "playbook.yml",
      "clean_staging_directory": "true"
    }
  ]
}
